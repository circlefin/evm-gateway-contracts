{
  "name": "evm-gateway-contracts-private",
  "version": "1.0.0",
  "scripts": {
    "test": "forge test",
    "test:all": "./scripts/test_all_forks.sh",
    "test:js": "mocha test/js/*.test.js",
    "test:gas": "FORGE_GAS_REPORT=true forge test",
    "format": "forge fmt --check",
    "format:fix": "forge fmt",
    "lint": "solhint --disc -c .solhint-src.json './src/**/*.sol' && solhint --disc -c .solhint-test.json './test/**/*.sol'",
    "lint:fix": "solhint --disc --fix -c .solhint-src.json './src/**/*.sol' && solhint --disc --fix -c .solhint-test.json './test/**/*.sol'",
    "sizes": "forge build --sizes; ./scripts/contract_sizes.sh",
    "ci": "yarn format && yarn lint && yarn test:all",
    "coverage": "./scripts/coverage.sh"
  },
  "license": "Apache-2.0",
  "type": "module",
  "devDependencies": {
    "ethers": "6.14.0",
    "mocha": "11.2.2",
    "path": "0.12.7",
    "solhint": "5.0.5"
  },
  "packageManager": "yarn@4.7.0"
}
